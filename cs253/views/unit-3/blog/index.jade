extends ../layout

block content
  div.container
    div.text-center
      form(method="POST")
        h1 blog
        div.row
          a(href="/unit-3/problem/blog/newpost")
            | submit new post
    div
      for e in entries
        hr
        div.row.text-center
          form(method="POST")
            button.delete
              | x
            input(type="hidden", name="deleteID" value=e.id)
          h3
            a(href="/unit-3/problem/blog/" + e.id)
              = e.title
          h5= 'submitted: ' + e.time
          div.art= e.content